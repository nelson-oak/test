{
  "name": "template-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "commonjs",
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "scripts": {
    "dev": "cross-env PRODUCTION=false tsx watch ./src/shared/infra/http/server.ts",
    "start": "cross-env PRODUCTION=true node dist/shared/infra/http/server.js",
    "build": "tsup ./src/**",
    "test": "jest",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "typeorm": "ts-node-dev  -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:create": "yarn typeorm migration:create",
    "typeorm:migration:run": "yarn typeorm migration:run -d ./src/config/orm/index.ts",
    "typeorm:migration:revert": "yarn typeorm migration:revert -d ./src/config/orm/index.ts",
    "typeorm:schema:drop": "yarn typeorm schema:drop -d ./src/config/orm/index.ts"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint src/**/*.ts --fix"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.40",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.8.0",
    "prisma": "^4.9.0",
    "rate-limiter-flexible": "^2.3.7",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.11",
    "uuid": "^8.3.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
